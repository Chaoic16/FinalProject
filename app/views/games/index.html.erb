<font color="FFFFFF">
<h1>Listing games</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Developer</th>
    <th>Publisher</th>
    <th>Platform</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.title %></td>
    <td><%= game.developer_id %></td>
    <td><%= game.publisher_id %></td>
    <td><%= game.platform_id %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Game', new_game_path %>
</font>
